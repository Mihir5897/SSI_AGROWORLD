<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_dashboard"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="#AD00FF"
    app:cardCornerRadius="20dp">

    <ImageView
        android:layout_width="97dp"
        android:layout_height="99dp" />

    <LinearLayout
        android:id="@+id/linearLayoutcardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icon_of_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_total_lead" />

        <TextView
            android:id="@+id/tx_number"
            style="@style/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="245" />

        <TextView
            android:layout_marginTop="-15dp"
            android:id="@+id/txtitle"
            style="@style/now_please_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="Total\nLeads" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>