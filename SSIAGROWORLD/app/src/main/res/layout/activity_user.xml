    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/user_layer"
        android:layout_width="412dp"
        android:layout_height="262dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/user_bg"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_select_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aditya_gupt"
            android:layout_width="113dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="37dp"
            android:drawableRight="@drawable/ic_edit"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="3sp"
            android:text="@string/aditya_gupt"
            android:textAppearance="@style/aditya_gupt"
            android:translationY="-1.6sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />


    </androidx.constraintlayout.widget.ConstraintLayout>




        <EditText

            android:id="@+id/rectangle_last_name2"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"

            android:background="@drawable/rectangle_box"
            android:fontFamily="@font/poppins"
            android:paddingLeft="20dp"
            android:text="@string/gupta"
            android:textAppearance="@style/gupta"
            app:layout_constraintBottom_toTopOf="@+id/enter_email2"
            app:layout_constraintStart_toStartOf="@+id/email_id_2" />

        <TextView
            android:id="@+id/first_name_2"
            android:layout_width="78dp"
            android:layout_height="18dp"
            android:fontFamily="@font/poppins"
            android:text="@string/first_name_"
            android:textAppearance="@style/first_name_"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_frist_name2"
            app:layout_constraintStart_toStartOf="@+id/rectangle_frist_name2"
            app:lineHeight="25sp" />

        <TextView
            android:id="@+id/last_name_2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/last_name_"
            android:textAppearance="@style/last_name_"
            android:translationY="-3.5sp"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_last_name2"
            app:layout_constraintStart_toStartOf="@+id/rectangle_last_name2"
            app:lineHeight="25sp" />

        <TextView
            android:id="@+id/email_id_2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/email_id_"
            android:textAppearance="@style/email_id_"
            android:translationY="-3.5sp"
            app:layout_constraintBottom_toTopOf="@+id/enter_email2"
            app:layout_constraintStart_toStartOf="@+id/enter_email2"
            app:lineHeight="25sp" />

        <EditText
            android:id="@+id/rectangle_frist_name2"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_box"
            android:fontFamily="@font/poppins"
            android:paddingLeft="20dp"

            android:text="@string/aditya"
            android:textAppearance="@style/aditya"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_last_name2"
            app:layout_constraintStart_toStartOf="@+id/last_name_2" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_box"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btn_update"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/india_1"
                android:layout_width="18dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:src="@drawable/india"
                tools:layout_editor_absoluteY="14dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_weight="10"
                app:srcCompat="@drawable/more"
                tools:layout_editor_absoluteX="162dp"
                tools:layout_editor_absoluteY="22dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:fontFamily="@font/poppins"
                android:inputType="phone"
                android:lineSpacingExtra="3sp"
                android:paddingStart="20dp"
                android:text="@string/some_id"
                android:textAppearance="@style/some_id" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rectangle_select_user"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_box"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_frist_name2"
            app:layout_constraintStart_toStartOf="@+id/first_name_2">

            <TextView
                android:id="@+id/bde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="@string/bde"
                android:textAppearance="@style/bde"
                android:translationY="2sp"
                app:lineHeight="25sp"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="12dp" />

            <ImageView
                android:id="@+id/vector_706"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"

                android:background="@drawable/user_name"
                android:src="@drawable/more_name"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="20dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_update"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_1"
            android:fontFamily="@font/poppins"
            android:text="@string/update"
            android:textAppearance="@style/login"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/select_user2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/select_user"
            android:textAppearance="@style/select_user"
            android:translationY="-3.5sp"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_select_user"
            app:layout_constraintStart_toStartOf="@+id/rectangle_select_user"
            app:layout_constraintTop_toBottomOf="@+id/user_layer"
            app:lineHeight="25sp" />

        <EditText
            android:id="@+id/enter_email2"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:layout_marginBottom="20dp"

            android:background="@drawable/rectangle_box"
            android:fontFamily="@font/poppins"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:text="@string/agupta_syst"
            android:textAppearance="@style/agupta_syst"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/phone_numbe2" />

        <TextView
            android:id="@+id/phone_numbe2"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/phone_numbe"
            android:textAppearance="@style/phone_numbe"
            android:translationY="-3.5sp"
            app:layout_constraintBottom_toTopOf="@+id/phone"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:lineHeight="25sp" />

