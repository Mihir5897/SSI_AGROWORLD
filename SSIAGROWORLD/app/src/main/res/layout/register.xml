<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16sp"
    android:scrollbarSize="10sp">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/last_name_"
            android:textAppearance="@style/last_name_"
            android:translationY="-3.5sp"
            app:layout_constraintStart_toStartOf="@+id/first_name_3"
            app:layout_constraintTop_toBottomOf="@+id/firstNameTextField" />

        <TextView
            android:id="@+id/select_user"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/select_user"
            android:textAppearance="@style/select_user"
            android:translationY="-3.5sp"
            app:layout_constraintStart_toStartOf="@+id/userTypeSpinner"
            app:layout_constraintTop_toBottomOf="@+id/hello_sign_" />


        <TextView
            android:id="@+id/email_id"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/email_id_"
            android:textAppearance="@style/email_id_"
            android:translationY="-3.5sp"
            app:layout_constraintStart_toStartOf="@+id/emailTextField"
            app:layout_constraintTop_toBottomOf="@+id/lastNameTextField" />

        <TextView
            android:id="@+id/first_name_3"
            android:layout_width="78dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="@string/first_name_"
            android:textAppearance="@style/first_name_"
            app:layout_constraintStart_toStartOf="@+id/select_user"
            app:layout_constraintTop_toBottomOf="@+id/userTypeSpinner" />

        <TextView
            android:id="@+id/hello_sign_"
            android:layout_width="229dp"
            android:layout_height="73dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins"
            android:gravity="top"
            android:lineSpacingExtra="0sp"
            android:text="@string/hello_sign_"
            android:textAppearance="@style/hello_sign_"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView11"
            app:lineHeight="36sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/userTypeSpinner"
            style="@style/SpinnerTheme"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:dropDownVerticalOffset="35dp"
            android:elevation="0dp"
            android:popupElevation="0dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/select_user" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/firstNameTextField"
            style="@style/TextInputLayoutStyle"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            app:errorIconDrawable="@drawable/ic_end_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_name_3">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_first"
                android:textAppearance="@style/enter_first"

                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="143dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lastNameTextField"
            style="@style/TextInputLayoutStyle"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            app:errorIconDrawable="@drawable/ic_end_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_name">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_last_"
                android:textAppearance="@style/enter_last_"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="143dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailTextField"
            style="@style/TextInputLayoutStyle"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            app:errorIconDrawable="@drawable/ic_end_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_id">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress"
                android:textAppearance="@style/enter_email"
                tools:layout_editor_absoluteX="25dp"
                tools:layout_editor_absoluteY="143dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/phone_numbe"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:lineSpacingExtra="7sp"
            android:text="@string/phone_numbe"
            android:textAppearance="@style/phone_numbe"
            android:translationY="-3.5sp"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/emailTextField" />

        <LinearLayout
            android:id="@+id/phone"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_box"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone_numbe">

            <ImageView
                android:id="@+id/india_1"
                android:layout_width="18dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_weight="10"
                android:src="@drawable/india" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="6dp"
                android:layout_gravity="center"
                android:layout_weight="10"
                app:srcCompat="@drawable/more" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/edt_phonee"
                style="@style/TextInputLayoutStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:errorIconDrawable="@drawable/ic_end_error"
                android:layout_weight="80"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="@string/enter_your_"
                    android:textAppearance="@style/enter_your_nu"
                    />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_register2"
            android:layout_width="315dp"
            android:layout_height="50dp"
            android:layout_marginTop="107dp"
            android:layout_marginBottom="11dp"
            android:background="@drawable/rectangle_1"
            android:text="@string/register"
            android:textAppearance="@style/login"
            android:textSize="21sp"
            app:layout_constraintBottom_toTopOf="@+id/already_hav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone" />

        <TextView
            android:id="@+id/already_hav"
            android:layout_width="174dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:text="@string/already_hav"
            android:textAppearance="@style/already_hav"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_profile_bg" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView11"
            app:layout_constraintEnd_toEndOf="@+id/imageView11"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="@+id/imageView11"
            app:layout_constraintVertical_bias="0.566"
            app:srcCompat="@drawable/ic_profile" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="66dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView12"
            app:layout_constraintEnd_toEndOf="@+id/imageView12"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/imageView12"
            app:layout_constraintTop_toTopOf="@+id/imageView12"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_camera" />
    </androidx.constraintlayout.widget.ConstraintLayout></ScrollView>